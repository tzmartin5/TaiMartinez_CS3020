@page
@model FinalProject.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Students";
}

<div style="text-align:center">
    <h1 style="background-color:darkseagreen">Students</h1>


    <p>This page is used by students to add their information for coaches.</p>
</div>
    <p>
        <a asp-page="Create">Create New</a>
    </p>

    <form>
        <p>
            <select asp-for="SelectedEvent" asp-items="Model.Events">
                <option value="">All</option>
            </select>
            Name: <input type="text" asp-for="SearchString" />
            <input type="submit" value="Filter" />

        </p>
    </form>






    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].Grade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].EventPref)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student[0].Phone)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Student)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Grade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventPref)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
