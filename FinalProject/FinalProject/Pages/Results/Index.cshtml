@page
@model FinalProject.Pages.Results.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <select asp-for="SpecificEvent" asp-items="Model.Events">
            <option value="">All</option>
        </select>
        Meet Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />

    </p>
</form>




<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].MeetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].Athlete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results[0].Mark)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Results)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MeetName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Athlete)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mark)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
